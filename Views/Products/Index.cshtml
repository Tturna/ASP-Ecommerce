@model ASP_Ecommerce.Models.ViewModels.ProductsViewModel
@using ASP_Ecommerce.Components
@{
    ViewBag.Title = "Official Products";
    Layout = "_Layout";
}

<h1>Find your new phone</h1>

@if (User.IsInRole("Admin"))
{
    <component type="typeof(AddProduct)" render-mode="Server" />
}

@* TODO: Consider refactoring this to use a partial view or a component as this is duplicated in all product lists *@
@foreach(var product in Model.Products)
{
    <div class="card mt-3" style="width: 18rem;">
        <a asp-controller="Products" asp-action="Product" asp-route-id="@product.Id">
            <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
        </a>
        <div class="card-body">
            <h5 class="card-title">@product.Name</h5>
            <p class="card-text">@product.ShortDescription</p>
            <p class="card-text">Price: @product.Price</p>
            <button onclick="addItemToCart(@product.Id)" class="btn btn-primary">Add to cart</button>
        </div>
    </div>
}