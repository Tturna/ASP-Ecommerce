@model ASP_Ecommerce.Models.ViewModels.BecomeMaintainerViewModel

@{
    ViewBag.Title = "Become a maintainer";
    Layout = "_Layout";
}

<div class="content">
    <h1 class="rubik-mono-one-regular"><span class="gr-text-tertiary">Become a maintainer</span></h1>

    <form asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="c-primary"></div>
        <div>
            <span asp-validation-for="MaintainerAddress" class="c-primary"></span>
            <input asp-for="MaintainerAddress" class="rubik-strong-menu" placeholder="Business address" />
        </div>
        <div>
            <span asp-validation-for="City" class="c-primary"></span>
            <input asp-for="City" class="rubik-strong-menu" placeholder="City" />
        </div>
        <div>
            <span asp-validation-for="PostalCode" class="c-primary"></span>
            <input asp-for="PostalCode" class="rubik-strong-menu" placeholder="Postal code" />
        </div>
        <div>
            <span asp-validation-for="Country" class="c-primary"></span>
            <input asp-for="Country" class="rubik-strong-menu" placeholder="Country" />
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
</div>
