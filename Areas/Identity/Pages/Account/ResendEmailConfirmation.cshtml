@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Resend email confirmation";
}

<div class="login-section">
    <div class="login-side">
        <h1>@ViewData["Title"]</h1>
        <form method="post">
            <div asp-validation-summary="All" class="c-primary" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="rubik-strong-menu" aria-required="true" placeholder="Email" />
                <span asp-validation-for="Input.Email" class="c-primary"></span>
            </div>
            <button type="submit" class="btn btn-primary">Resend</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
