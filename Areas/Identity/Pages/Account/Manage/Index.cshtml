@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h2 class="rubik-mono-one-regular">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="profile-form" method="post">
    <div asp-validation-summary="ModelOnly" class="c-primary" role="alert"></div>
    <div>
        <label asp-for="Username" class="rubik-strong-menu"></label><br/>
        <input asp-for="Username" class="rubik-strong-menu" placeholder="No username set???" disabled />
    </div>
    <div>
        <span asp-validation-for="Input.ProfilePictureUrl" class="c-primary"></span><br/>
        <label asp-for="Input.ProfilePictureUrl" class="rubik-strong-menu"></label><br/>
        <input asp-for="Input.ProfilePictureUrl" class="rubik-strong-menu" placeholder="Profile picture URL"/>
    </div>
    <div>
        <span asp-validation-for="Input.PhoneNumber" class="c-primary"></span><br/>
        <label asp-for="Input.PhoneNumber" class="rubik-strong-menu"></label><br/>
        <input asp-for="Input.PhoneNumber" class="rubik-strong-menu" placeholder="Phone number"/>
    </div>
    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
