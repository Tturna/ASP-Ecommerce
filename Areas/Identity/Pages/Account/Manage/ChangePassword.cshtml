@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<h2 class="rubik-mono-one-regular">@ViewData["Title"]</h2>
<partial name="_StatusMessage" for="StatusMessage" />
<form id="change-password-form" method="post">
    <div asp-validation-summary="ModelOnly" class="c-primary" role="alert"></div>
    <div>
        <span asp-validation-for="Input.OldPassword" class="c-primary"></span><br/>
        <label asp-for="Input.OldPassword" class="rubik-strong-menu">Old password</label><br/>
        <input asp-for="Input.OldPassword" class="rubik-strong-menu" autocomplete="current-password" aria-required="true" placeholder="Old password" />
    </div>
    <div>
        <span asp-validation-for="Input.NewPassword" class="c-primary"></span><br/>
        <label asp-for="Input.NewPassword" class="rubik-strong-menu"></label><br/>
        <input asp-for="Input.NewPassword" class="rubik-strong-menu" autocomplete="new-password" aria-required="true" placeholder="New password" />
    </div>
    <div>
        <span asp-validation-for="Input.ConfirmPassword" class="c-primary"></span><br/>
        <label asp-for="Input.ConfirmPassword" class="rubik-strong-menu"></label><br/>
        <input asp-for="Input.ConfirmPassword" class="rubik-strong-menu" autocomplete="new-password" aria-required="true" placeholder="Confirm new password"/>
    </div>
    <button type="submit" class="btn btn-primary">Update password</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
